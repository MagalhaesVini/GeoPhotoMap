<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <title>Mapa com Imagens</title>
  <link rel="stylesheet" href="/leaflet/leaflet.css" />
  <style>
    html, body {
      height: 100%;
      margin: 0;
      font-family: Arial, sans-serif;
    }
    #container {
      display: flex;
      height: 100vh;
      width: 100vw;
    }
    #gallery {
      width: 280px;
      overflow-y: auto;
      border-right: 1px solid #ccc;
      background: #f9f9f9;
      padding: 10px;
      box-sizing: border-box;
    }
    #gallery h2 {
      margin-top: 0;
      font-size: 1.2em;
      margin-bottom: 10px;
      text-align: center;
    }
    .thumb {
      cursor: pointer;
      margin-bottom: 12px;
      border: 1px solid #ccc;
      border-radius: 6px;
      overflow: hidden;
      background: white;
      transition: box-shadow 0.3s;
      padding: 5px;
    }
    .thumb:hover {
      box-shadow: 0 0 8px rgba(0,0,0,0.3);
    }
    .thumb img {
      width: 100%;
      display: block;
      border-radius: 4px;
    }
    .thumb .caption {
      font-weight: bold;
      font-size: 0.9em;
      margin-top: 5px;
    }
    .thumb .date {
      font-size: 0.8em;
      color: #666;
    }

    #map {
      flex-grow: 1;
    }

    .popup-img {
      max-width: 220px;
    }
    .popup-img img {
      width: 100%;
      border-radius: 8px;
      margin-top: 4px;
    }
  </style>
</head>
<body>
  <div id="container">
    <div id="gallery">
      <h2>Galeria de Imagens</h2>
      <!-- Miniaturas vão aqui -->
    </div>
    <div id="map"></div>
  </div>

  <script src="/leaflet/leaflet.js"></script>
  <script>
    const imagens = <%- JSON.stringify(imagens) %>;

    // Inicializa mapa centralizado na primeira imagem ou em 0,0
    const defaultCoords = [0, 0];
    const startCoords = imagens.length > 0 ? [imagens[0].lat, imagens[0].lng] : defaultCoords;

    const map = L.map('map', {
      center: startCoords,
      zoom: 18,
      zoomControl: true,
      maxZoom: 22
    });

    // Camada Google Maps híbrido (satélite + nomes das ruas)
    L.tileLayer('https://mt1.google.com/vt/lyrs=y&x={x}&y={y}&z={z}', {
      attribution: 'Map data © <a href="https://www.google.com/intl/en/help/terms_maps/">Google</a>',
      maxZoom: 22
    }).addTo(map);

    // Guarda referência dos markers para abrir popup ao clicar na galeria
    const markers = [];

    // Referência para o container da galeria
    const galleryEl = document.getElementById('gallery');

    imagens.forEach(({ lat, lng, name, img, dataHora }, idx) => {
      // Cria marcador e popup
      const marker = L.marker([lat, lng], { title: name }).addTo(map);
      marker.bindPopup(`
        <div class="popup-img">
          <strong>${name}</strong><br>
          <img src="${img}" alt="${name}" /><br>
        </div>
      `);
      markers.push(marker);

      // Cria miniatura na galeria
      const thumb = document.createElement('div');
      thumb.className = 'thumb';
      thumb.innerHTML = `
        <img src="${img}" alt="${name}" />
        <div class="caption">${name}</div>
      `;

      // Ao clicar na miniatura, centraliza no marker e abre popup
      thumb.addEventListener('click', () => {
        map.setView([lat, lng], 21, { animate: true });
        marker.openPopup();
      });

      galleryEl.appendChild(thumb);
    });

    if (imagens.length === 0) {
      galleryEl.innerHTML += '<p>Nenhuma imagem encontrada para exibir.</p>';
      console.warn("Nenhuma imagem encontrada para exibir no mapa.");
    }
  </script>
</body>
</html>
